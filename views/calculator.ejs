<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Calculator</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
        /* Glassmorphism Effect */
        .glass {
            backdrop-filter: blur(12px);
            background: rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-pink-500 via-purple-500 to-indigo-500 min-h-screen flex justify-center items-center flex-col text-black">

    <!-- Navigation bar -->
    <nav class="w-full bg-gradient-to-r from-indigo-700 via-purple-700 to-pink-700 py-4 fixed top-0 z-10 shadow-lg">
        <ul class="flex justify-center space-x-8">
            <li>
                <a href="/" class="text-black text-lg font-medium hover:text-yellow-700 transition-all duration-300">
                    Home
                </a>
            </li>
        </ul>
    </nav>

    <!-- Calculator container -->
    <div class="glass text-gray-800 p-8 rounded-2xl shadow-2xl mt-24 w-full max-w-md">
        <h1 class="text-4xl font-bold mb-6 text-center tracking-tight text-black">
            Modern Calculator
        </h1>
        
        <!-- Calculator Form -->
        <form id="calculator-form" class="space-y-6">
            <div class="space-y-4">
                <input type="number" id="num1" placeholder="Enter the first number" required 
                       class="w-full p-4 bg-white/20 text-black border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 hover:ring-2 hover:ring-pink-500 transition-all duration-200" 
                       aria-label="First number">
                <input type="number" id="num2" placeholder="Enter the second number" required 
                       class="w-full p-4 bg-white/20 text-black border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 hover:ring-2 hover:ring-pink-500 transition-all duration-200" 
                       aria-label="Second number">
            </div>
            
            <div class="flex justify-between space-x-4">
                <select id="operation" class="w-1/3 p-4 bg-white/20 text-black border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 hover:ring-2 hover:ring-pink-500 transition-all duration-200" 
                        aria-label="Operation">
                    <option value="+">Add</option>
                    <option value="-">Subtract</option>
                    <option value="*">Multiply</option>
                    <option value="/">Divide</option>
                </select>
                <button type="submit" 
                        class="w-2/3 p-4 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold rounded-lg hover:opacity-90 transition duration-300 ease-in-out focus:ring-4 focus:ring-purple-300 focus:outline-none" 
                        aria-label="Calculate button">
                    Calculate
                </button>
            </div>
        </form>

        <!-- Result Display -->
        <div id="result-container" class="mt-8 bg-white/30 text-black p-6 rounded-lg shadow-md text-center transition-all duration-300">
            <h2 class="text-xl font-medium">
                Result:
            </h2>
            <p id="result" class="text-2xl font-bold mt-4"></p>
        </div>
    </div>

    <script>
        document.getElementById('calculator-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            const operation = document.getElementById('operation').value;

            let result = 0;
            if (operation === '+') {
                result = num1 + num2;
            } else if (operation === '-') {
                result = num1 - num2;
            } else if (operation === '*') {
                result = num1 * num2;
            } else if (operation === '/') {
                result = num2 === 0 ? "Cannot divide by zero!" : (num1 / num2).toFixed(2);
            }

            // Dynamic Result Styling
            const resultElement = document.getElementById('result');
            resultElement.style.opacity = 0;
            resultElement.textContent = result;

            setTimeout(() => {
                resultElement.style.transition = 'opacity 0.3s ease-in-out';
                resultElement.style.opacity = 1;
            }, 100);
        });
    </script>
</body>
</html>
